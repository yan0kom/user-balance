<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger): %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="yan0kom" level="debug" />

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
